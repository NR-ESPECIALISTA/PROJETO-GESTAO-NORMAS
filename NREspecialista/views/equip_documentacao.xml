<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record model="ir.ui.view" id="view_equip_documentacao_tree">
        <field name="name">equip.documentacao.form</field>
        <field name="model">equip.documentacao</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ndocumento" />
                <field name="tipo_documentacao" />
                <field name="documentacao_validade_date" />
            </tree>
        </field>
    </record>

    <record id="view_equip_documentacao_form" model="ir.ui.view">
        <field name="name">equip.documentacao.form</field>
        <field name="model">equip.documentacao</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="Documentação">
                            <field name="tipo_documentacao"
                                placeholder='Escolha o documento que deseja inserir !'
                                class="oe_title" />
                            <field name="ndocumento"/>
                            <field name="documentacao_validade_date"/>
                            <field name="equip_doc_foto_pdf" widget="radio"
                                options="{'horizontal': true}"/>
                            <field name="equip_doc_image" widget="image"
                                options="{'size': [250, 250]}"
                                attrs="{'invisible': [('equip_doc_foto_pdf', '!=', 'foto')]}" />
                            <field name='equip_doc_pdf'
                                attrs="{'invisible': [('equip_doc_foto_pdf', '!=', 'pdf')]}" />
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="action_equip_documentacao">
        <field name="name">equip_documentacao window</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">equip.documentacao</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crie seu primeiro registro de documento !
            </p>
        </field>
    </record>
</odoo>